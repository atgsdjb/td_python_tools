#!/usr/bin/make
#构建当前目录下所有目标文件----version.0.1
#files :=$(shell ls )
files :=$(wildcard *.c *.cpp)
sources_c := $(filter %.c,$(files))
sources_cpp := $(filter %.cpp,$(files))
sources :=$(sort $(sources_cpp) $(sources_c))
objects :$(subst .c,.o,$(sources_c)) $(subst .cpp,.o,$(sources_cpp))
all : 
	@echo $(sources)
	@echo $(objects)

