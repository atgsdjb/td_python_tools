include Name.mk
##VPATH := obj
V1 :=$(V2)
V2 =-v2-
V3 :=$(shell date)
V4 =$(shell date)
SOURCE :=$(wildcard *.c)
OBJ_PATH = # obj/
vpath %.c temp
vpath %.o obj
OBJECT := root.o #$(subst %.c,%.o,$(SOURCE))
all := test
all : $(OBJECT)
	@echo $(VPATH)
	gcc -o $(all) $(OBJ_PATH)$(OBJECT)
%.o : %.c
	gcc -c $< -o ./obj/$@

